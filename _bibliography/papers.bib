@article{wattsRelaxationsExactSolutions2024,
  title = {Relaxations and {{Exact Solutions}} to {{Quantum Max Cut}} via the {{Algebraic Structure}} of {{Swap Operators}}},
  author = {Watts, Adam Bene and Chowdhury, Anirban and Epperly, Aidan and Helton, J. William and Klep, Igor},
  year = {2024},
  month = may,
  journal = {Quantum},
