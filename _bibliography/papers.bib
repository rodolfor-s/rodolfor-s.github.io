  author = {Gluza, Marek and Sabino, Jo{\~a}o and Ng, Nelly H.Y. and Vitagliano, Giuseppe and Pezzutto, Marco and Omar, Yasser and Mazets, Igor and Huber, Marcus and Schmiedmayer, J{\"o}rg and Eisert, Jens},
