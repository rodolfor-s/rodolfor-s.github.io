  langid = {english},
  keywords = {Condensed Matter - Statistical Mechanics,High Energy Physics - Theory,Mathematical Physics,Mathematics - Mathematical Physics,Nonlinear Sciences - Chaotic Dynamics,Quantum information,Quantum mechanics,Quantum Physics,Theoretical physics,Thermodynamics}
}

@article{masanesGeneralDerivationQuantification2017,
