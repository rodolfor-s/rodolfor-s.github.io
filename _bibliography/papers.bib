  author = {Maslennikov, Gleb and Ding, Shiqian and Habl{\"u}tzel, Roland and Gan, Jaren and Roulet, Alexandre and Nimmrichter, Stefan and Dai, Jibo and Scarani, Valerio and Matsukevich, Dzmitry},
