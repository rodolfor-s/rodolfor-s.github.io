@article{khezri2023,
  title = {Measurement-{{Induced State Transitions}} in a {{Superconducting Qubit}}: {{Within}} the {{Rotating Wave Approximation}}},
  shorttitle = {Measurement-{{Induced State Transitions}} in a {{Superconducting Qubit}}},
  author = {Khezri, Mostafa and Opremcak, Alex and Chen, Zijun and Miao, Kevin C. and McEwen, Matt and Bengtsson, Andreas and White, Theodore and Naaman, Ofer and Sank, Daniel and Korotkov, Alexander N. and Chen, Yu and Smelyanskiy, Vadim},
