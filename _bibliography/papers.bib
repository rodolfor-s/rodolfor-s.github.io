@article{faist2020,
  title = {Continuous Symmetries and Approximate Quantum Error Correction},
  author = {Faist, Philippe and Nezami, Sepehr and Albert, Victor V. and Salton, Grant and Pastawski, Fernando and Hayden, Patrick and Preskill, John},
