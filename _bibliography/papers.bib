  keywords = {General Relativity and Quantum Cosmology,High Energy Physics - Phenomenology,High Energy Physics - Theory,Quantum Physics}
}

@article{kaplanekHotAcceleratedQubits2020,
  title = {Hot {{Accelerated Qubits}}: {{Decoherence}}, {{Thermalization}}, {{Secular Growth}} and {{Reliable Late-time Predictions}}},
