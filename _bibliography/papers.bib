  author = {Zambon, Guilherme and Adesso, Gerardo},
  year = {2025},
  month = may,
  journal = {Phys. Rev. Lett.},
  volume = {134},
  number = {20},
  eprint = {2411.05559},
  primaryclass = {quant-ph},
