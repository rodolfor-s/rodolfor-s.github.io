@article{rossiniCoherentDissipativeDynamics2021,
  title = {Coherent and Dissipative Dynamics at Quantum Phase Transitions},
  author = {Rossini, Davide and Vicari, Ettore},
  year = {2021},
  month = nov,
  journal = {Phys. Rep.},
  volume = {936},
  eprint = {2103.02626},
